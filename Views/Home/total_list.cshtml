<style>
    * {
        box-sizing: border-box;
        font-family: 'Roboto Condensed', sans-serif;
    }

    .item1 {
        margin-top: 30px;
        grid-area: header;
        text-align: center;
    }

    .item2 {
        grid-area: menu;
    }

    .item3 {
        grid-area: main;
        margin-left: auto;
        margin-right: auto;
    }

    .item5 {
        grid-area: footer;
    }

    .grid-container {
        display: grid;
        grid-template-areas: 'header header header header header header' 'main main main main main main' 'footer footer footer footer footer footer';
        gap: 50px;
        padding: 10px;
        margin-left: auto;
        margin-right: auto;
        border: #230102;
    }

    .grid-container>div {
        text-align: center;
        padding: 20px 0;
    }

    .item1 a {
        color: #FFCD00;
    }

    .item1 h1 {
        color: #fdfdfd;
        margin: 20px 0;
    }

    .item3 {
        margin: auto;
        align-items: center;
        padding: 10px;
    }

    .liner1 {
        padding-top: 0px;
        padding-left: 100px;
        text-decoration-line: line-through;
        text-decoration-thickness: 5px;
        color: rgb(255, 255, 255);
    }

    .none {
        text-align: center;
        color: rgb(255, 255, 255);
    }

    /* start */

    * {
        box-sizing: border-box;
    }

    body {
        background-image: linear-gradient(125deg, #EA2027, #230102);
        padding: 20px;
        font-family: Arial;
    }

    /* Center website */

    .main {
        margin: auto;
    }

    h1 {
        font-size: 50px;
        word-break: break-all;
    }

    h3 {
        margin-top: 17px;
    }

    .row {
        margin: 8px -16px;
    }

    /* Add padding BETWEEN each column */

    .row,
    .row>.column {
        margin: auto;
        padding: 10px;
    }

    /* Create four equal columns that floats next to each other */

    .column {
        width: 30%;
    }

    /* Clear floats after rows */

    .row:after {
        content: "";
        display: table;
        clear: both;
    }

    /* Content */

    .content {
        padding: 8px;
    }

    .Bg {
        background-color: #780E11;
        filter: drop-shadow(0px 20px 10px rgba(0, 0, 0, 0.3));
    }

    .T1 {
        padding-top: 0px;
        padding-bottom: 0px;
        font-size: 30px;
        font-weight: bolder;
        padding-left: 30px;
    }

    .dropdown2 {
        margin-left: auto;
        margin-right: auto;
        margin-top: -10px;
        width: 60%;
        filter: drop-shadow(0px 10px 5px rgba(0, 0, 0, 0.3));
    }

   
        .column {
            width: 50%;
        }
    
        .column {
            width: 100%;
        }
    

    /* end */

    .bd {
        border-color: #fdfdfd;
    }

    .dropdown1 {
        text-align: center;
        padding-top: 5px;
        padding-bottom: 5px;
        background-color: rgb(165, 172, 173);
        color: rgb(255, 255, 255);
        font-weight: bold;
        border-bottom: solid 3px rgb(59, 58, 58);
    }

    .dropdown3 {
        text-align: center;
        padding-top: 5px;
        padding-bottom: 5px;
        background-color: rgb(165, 172, 173);
        color: rgb(255, 255, 255);
        font-weight: bold;
    }

    .dropdownbg {
        background-color: rgb(165, 172, 173);
    }
</style>
<div class="flex-item">
    <center><img class="img-topic" src="https://media.discordapp.net/attachments/1035452783442264094/1036302569179459684/2.png" alt="picture;"></center>
</div>


<div class="flex-item">
</div>

<div class="flex-item">
    <center> <img class="img-food" src="https://cdn.discordapp.com/attachments/1035452783442264094/1036318740817645686/Screenshot_2022-10-30_234008.png" alt="picture"></center>
</div>

<div>
    <center>
        <p class="detail">@ViewBag.idstore</p>
    </center>
</div>
<div class="flex-item">
    <div class="container mt-3">
        <table class="table table-bordered table-sm bgtd">
            <thead class=" table bgth ">
                <tr>
                    <th>No</th>
                    <th>Order</th>
                    <th>Amount</th>
                    <th>Order person</th>
                    <th>Price</th>
                    <th>Note</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < 10; i++)
                {
                    @if (i < ViewBag.listorder.Count)
                    {
                        <tr>
                            <td>@(i + 1)</td>
                            <td>@ViewBag.listorder[i].men</td>
                            <td>@ViewBag.listorder[i].amount</td>
                            <td>@ViewBag.listorder[i].name</td>
                            <td>@ViewBag.listorder[i].price</td>
                            <td>@ViewBag.listorder[i].note</td>
                        </tr>
                    }
                    else
                    {
                        <tr>
                            <td> </td>
                            <td> </td>
                            <td> </td>
                            <td> </td>
                            <td> </td>
                            <td> </td>
                        </tr>
                    }
                }

            </tbody>
        </table>
        <p class="totalbox">Total Price : @ViewBag.t ฿</p>
    </div>
</div>
